import {
  this.rune {rune},
  this.show {Show, show},
  this.text {join, text, text-byte-length},
  this.text.show {_quote},
}

define show-rune(ch: rune): text {
  let base = this.text.singleton(ch) in
  let len on base = text-byte-length(base) in
  let result on base = join(_quote(base, len, 0, 0)) in
  let _ = base in
  result
}

constant as-show: show(rune) {
  Show of {
    show = show-rune,
  }
}
