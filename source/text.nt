import {
- this.i8-array
- this.list
}

export {
- text
- text-new
- print
}

alias-opaque text {
  i8-array
}

define text-new(xs: list(i8)): text {
  magic cast(i8-array, text, i8-array-new(xs))
}


define print(t: &text): i64 {
  introspect target-os {
  - darwin =>
    let ptr = magic cast(&text, i64, t)
    let len: i64 = magic load(i64, ptr)
    let content-pointer: i64 = add-i64(ptr, 8)
    magic external(write, 1: i64, content-pointer, len)
  }
}
