import {
  O {EQ},
  Ord {ord},
  this.bool {False, True, bool},
}

data eq(a) {
| Eq(
    equal: (a, a) -> bool,
  )
}

inline from-ord<a>(o: ord(a)): eq(a) {
  Eq of {
    equal = {
      function (x, y) {
        match o::compare(x, y) {
        | EQ =>
          True
        | _ =>
          False
        }
      }
    },
  }
}

inline comap<a, b>(!f: (a) -> b, e: eq(b)): eq(a) {
  Eq of {
    equal = {
      function (x, y) {
        e::equal(!f(x), !f(y))
      }
    },
  }
}
