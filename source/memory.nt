import {
- this.unit
}

export {
- store-int
- store-i8
- store-i1
- load-int
- load-i8
- load-i1
}

inline store-int(value: int, address: int): unit {
  introspect target-arch {
  - amd64 =>
    magic store(i64, value, address)
  - arm64 =>
    magic store(i64, value, address)
  }
}

inline store-i8(value: i8, address: int): unit {
  magic store(i8, value, address)
}

inline store-i1(value: i1, address: int): unit {
  magic store(i1, value, address)
}

inline load-int(address: int): int {
  magic load(i64, address)
}

inline load-i8(address: int): i8 {
  magic load(i8, address)
}

inline load-i1(address: int): i1 {
  magic load(i1, address)
}
