import {
  this.bool {bool},
}

constant _c-int: type {
  introspect architecture {
  | amd64 =>
    int32
  | arm64 =>
    int32
  }
}

data c-int {
| C-Int(_c-int)
}

inline add-c-int(x: c-int, y: c-int): c-int {
  let C-Int(x) = x in
  let C-Int(y) = y in
  introspect architecture {
  | amd64 =>
    C-Int(add-int32(x, y))
  | arm64 =>
    C-Int(add-int32(x, y))
  }
}

inline or-c-int(x: c-int, y: c-int): c-int {
  let C-Int(x) = x in
  let C-Int(y) = y in
  introspect architecture {
  | amd64 =>
    C-Int(or-int32(x, y))
  | arm64 =>
    C-Int(or-int32(x, y))
  }
}

inline eq-c-int(x: c-int, y: c-int): bool {
  let C-Int(x) = x in
  let C-Int(y) = y in
  introspect architecture {
  | amd64 =>
    eq-int32(x, y)
  | arm64 =>
    eq-int32(x, y)
  }
}

inline ne-c-int(x: c-int, y: c-int): bool {
  let C-Int(x) = x in
  let C-Int(y) = y in
  introspect architecture {
  | amd64 =>
    ne-int32(x, y)
  | arm64 =>
    ne-int32(x, y)
  }
}

inline from-c-int(x: c-int): int {
  let C-Int(x) = x in
  introspect architecture {
  | amd64 =>
    sext-int32-int(x)
  | arm64 =>
    sext-int32-int(x)
  }
}
